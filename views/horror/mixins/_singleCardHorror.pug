mixin singleMiniCardHorror(card)
    div(class = `single-card ${ card.backText !== "" ? "reverse-card" : ""}`)
                    .card-front
                        .head-card
                            p= card.name
                        p= card.text
                    if card.backText !== ""
                        .card-back
                            .head-card
                                p= card.name
                            p= card.backText