mixin addCard(card = {})
    form.form(action="" method="POST")
    
        select(name="origin")
            option(value="Jeu de base") Jeu de base
        label(for="name") Nom
        input(type="text" name="name")
        label(for="type") Type
        input(type="text", name="type")
        label(for="texte") Texte
        textarea(name="texte", cols="30", rows="10")
        label(for="backtext") Texte au dos
        textarea(name="backtext", cols="30", rows="10")
        
        input(type="submit", value="Ajouter la carte")